
{ Teste 3: Estrutura de repetição Enquanto-Faça }
programa teste3;
var
    contador, limite, soma : inteiro;
inicio
    escrever('Digite o limite para contagem:');
    ler(limite);
    
    contador := 1;
    soma := 0;
    
    enquanto (contador <= limite) faca
        soma := soma + contador;
        contador := contador + 1;
    fim_enquanto  
    
    escrever('Soma dos numeros de 1 ate', limite, 'eh:', soma);
fim.

